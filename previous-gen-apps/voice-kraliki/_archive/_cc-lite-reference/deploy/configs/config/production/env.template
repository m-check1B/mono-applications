# Application Settings
NODE_ENV=production
PORT=3900
HOST=127.0.0.1

# Database Configuration - CHANGE_ME
DATABASE_URL="postgresql://CHANGE_ME_DB_USER:CHANGE_ME_DB_PASSWORD@localhost:5432/CHANGE_ME_DB_NAME?pool=20&connect_timeout=30&sslmode=require"
DATABASE_SSL=true
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30000

# Redis Configuration - CHANGE_ME
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD="CHANGE_ME_REDIS_PASSWORD"
REDIS_DB=0
REDIS_MAX_MEMORY=512mb

# Security Settings - CHANGE_ME (Generate with: openssl rand -base64 64)
JWT_SECRET="CHANGE_ME_JWT_SECRET_MINIMUM_64_CHARACTERS"
JWT_REFRESH_SECRET="CHANGE_ME_JWT_REFRESH_SECRET_MINIMUM_64_CHARACTERS"
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# API Keys and External Services - CHANGE_ME
ANTHROPIC_API_KEY="CHANGE_ME_ANTHROPIC_API_KEY"
OPENAI_API_KEY="CHANGE_ME_OPENAI_API_KEY"
TWILIO_ACCOUNT_SID="CHANGE_ME_TWILIO_ACCOUNT_SID"
TWILIO_AUTH_TOKEN="CHANGE_ME_TWILIO_AUTH_TOKEN"
TWILIO_PHONE_NUMBER="CHANGE_ME_TWILIO_PHONE_NUMBER"
DEEPGRAM_API_KEY="CHANGE_ME_DEEPGRAM_API_KEY"
GOOGLE_CLIENT_ID="CHANGE_ME_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="CHANGE_ME_GOOGLE_CLIENT_SECRET"

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/cc-lite/application.log
ERROR_LOG_FILE=/var/log/cc-lite/error.log

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_NAMESPACE=cc_lite

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/cc-lite.crt
SSL_KEY_PATH=/etc/ssl/private/cc-lite.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# File Upload Settings
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/var/uploads/cc-lite
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.gif

# Email Configuration (if needed) - CHANGE_ME
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=CHANGE_ME_SMTP_USER
SMTP_PASS=CHANGE_ME_SMTP_PASSWORD
SMTP_SECURE=false

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_TIMEOUT=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Performance Settings
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_CACHING=true
CACHE_CONTROL_MAX_AGE=3600

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=https://your-domain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Analytics (optional)
ENABLE_ANALYTICS=false
ANALYTICS_TRACKING_ID=

# Feature Flags
ENABLE_VOICE_CALLS=true
ENABLE_AI_RESPONSES=true
ENABLE_REALTIME_MONITORING=true
ENABLE_ADVANCED_ANALYTICS=false

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Environment-specific settings
ENVIRONMENT=production
DEBUG_MODE=false
VERBOSE_LOGGING=false
