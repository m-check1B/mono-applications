modules = ["nodejs-20", "bash", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["python_openrouter_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "libxcrypt", "openssl", "pkg-config", "postgresql", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Focus by Kraliki"

[[workflows.workflow]]
name = "Focus by Kraliki"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "scripts/start-production.sh"]
build = ["bash", "-c", "pip install -r backend/requirements.txt && cd frontend && pnpm install --frozen-lockfile && pnpm build"]
